<% provide(:title, 'Sign up') %>
</br>
<h3 class="center-align">ASTRONUT SIGN UP</h3>
<div class="row">
	<div class="col s4"></div>
	<div class="col s4 card medium">
		</br></br>
		<%= form_for(@user) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>
			<%= f.text_field :name, class: 'validate', placeholder: 'John Donut' %>
			<%= f.label :name %>
			<%= f.email_field :email, class: 'validate', placeholder: 'example@gmail.com'%>
			<%= f.label :email %>
			<%= f.password_field :password, class: 'validate' %>
			<%= f.label :password %>
			<%= f.password_field :password_confirmation, class: 'validate' %>
			<%= f.label :password_confirmation, "Confirmation" %>
			</br></br>
		</br>
		<%= f.submit "Create my account", class: "btn btn-primary" %>
		<% end %>
	</div>
</div>
