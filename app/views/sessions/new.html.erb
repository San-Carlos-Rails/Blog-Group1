<% provide(:title, "Log in") %>
</br>
<h3 class="center-align">ASTRONUT LOG IN</h3>
<div class="row">
	<div class="col s4"></div>
	<div class="col s4 card medium">
		</br></br></br>
		<%= form_for(:session, url: login_path) do |f| %>
			<%= f.email_field :email, class: 'validate', placeholder: 'example@gmail.com' %>
			<%= f.label :email %>
			<%= f.password_field :password, class: 'validate' %>
			<%= f.label :password %>
			</br></br>
			<%= f.label :remember_me, class: "checkbox" do %>
			<%= check_box_tag :remember_me, 1, params[:remember_me] %>
  			<%= label_tag :remember_me %>
		<% end %>
		</br>
		<%= f.submit "Log in", class: "btn btn-primary" %>
		<% end %>
		</br></br>
		<p class="center-align">Want a blog? <%= link_to "Sign up for an account.", signup_path %></p>
	</div>
</div>
